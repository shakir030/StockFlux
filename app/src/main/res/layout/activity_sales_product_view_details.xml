<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sales_product_view_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/heading_product_data_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="--- Sales Product Data --- "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_product_sales"
                android:layout_width="350dp"
                android:layout_below="@id/heading_product_data_sales"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:backgroundTint="#E7DCD9"
                android:visibility="visible"
                app:cardCornerRadius="20sp">

                <RelativeLayout
                    android:id="@+id/card_view_relative_layout_sales"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent ">

                    <TextView
                        android:id="@+id/sales_product_view_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Name of Product :- "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data_sales_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/sales_product_view_name"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sales_product_view_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_name"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="ID of Product :- "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data_sales_product_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_name"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/sales_product_view_id"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sales_product_view_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_id"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Quantity of Product :- "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data_sales_product_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_id"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/sales_product_view_per_price"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sales_product_view_per_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_qty"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:text="Per/Price of Product :- "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/data_sales_product_per_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_qty"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/sales_product_view_per_price"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sales_product_view_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_per_price"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Date :- "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data_sales_product_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_per_price"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/sales_product_view_date"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sales_product_view_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_date"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Total Price of Product :- "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data_sales_product_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_date"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/sales_product_view_total_price"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/sales_product_view_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_total_price"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Description of Product :- "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data_sales_product_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_total_price"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/sales_product_view_description"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sales_product_purchase_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_description"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Purchase ID :- "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data_sales_product_purchase_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/data_sales_product_description"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@id/sales_product_purchase_id"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/delete_data_sales_button"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/data_sales_product_purchase_id"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#C50404"
                        android:drawableTop="@drawable/delete_icon"
                        android:drawableTint="@color/white"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/sales_make_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/data_sales_product_purchase_id"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/delete_data_sales_button"
                        android:text="Make Bill" />

                    <Button
                        android:id="@+id/update_data_sales_button"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/data_sales_product_purchase_id"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@id/sales_make_bill"
                        android:backgroundTint="#04A21E"
                        android:drawableTop="@drawable/edit_icon"
                        android:drawableTint="@color/white"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <EditText
                android:id="@+id/customer_sales_name"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@id/card_product_sales"
                android:layout_centerHorizontal="true"
                android:hint="Enter Customer Name "
                android:visibility="gone"/>
            <Button
                android:id="@+id/continue_bill"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@id/customer_sales_name"
                android:layout_below="@id/card_product_sales"
                android:layout_marginStart="20dp"
                app:cornerRadius="90dp"
                android:drawableTop="@drawable/continue_icon"
                android:drawableTint="@color/white"
                android:padding="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>