<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".expense_reports">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Logo_Reports"
                android:layout_width="151dp"
                android:layout_height="146dp"
                android:background="@drawable/logo"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="254dp"
                android:layout_height="90dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@id/Logo_Reports"
                android:text="Expense Reports"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/purchase_expense"
                android:layout_below="@id/textView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:backgroundTint="@color/black"
                android:text="Purchase Expenses"
                android:textSize="25sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/sales_expense"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:layout_below="@id/purchase_expense"
                android:layout_centerHorizontal="true"
                android:text="Sales Expenses"
                android:textSize="25sp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                app:cornerRadius="20dp"/>
        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>