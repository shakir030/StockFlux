<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reports"
    tools:ignore="HardcodedText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/Relative_layout_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Logo_Reports"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/Profit_Loss_button"
                android:layout_marginStart="-5dp"
                android:textColor="@color/black"
                android:layout_marginBottom="48dp"
                android:layout_toEndOf="@id/Logo_Reports"
                android:text="Reports"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Profit_Loss_button"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_below="@id/Logo_Reports"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#039BE5"
                android:text="Profit and Loss"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/Expense_reports"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_below="@id/Profit_Loss_button"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#039BE5"
                android:text="Expense Reports"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/Bill_Payment"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_below="@id/Expense_reports"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#039BE5"
                android:text="Bill Payments"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/Bill_issue"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_below="@id/Bill_Payment"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#039BE5"
                android:text="Issued Bill"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>