<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="20dp"
                    app:srcCompat="@drawable/logo" />
                <TextView
                    android:id="@+id/purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="75dp"
                    android:text="ADD"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/a1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                android:hint="Product name"
                app:endIconMode="clear_text"
                app:startIconTint="#ff8300"
                app:startIconDrawable="@drawable/ic_icons8_product_50">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/a2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:hint="Purchase order ID#"
                app:endIconMode="clear_text"
                app:startIconTint="#ff8300"
                app:startIconDrawable="@drawable/ic_icons8_contact_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    android:textSize="20sp"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/a3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="25dp"
                    android:hint="QTY">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconMode="clear_text"
                        android:inputType="number"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/a4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:hint=" Per/Price">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconMode="clear_text"
                        android:inputType="numberDecimal"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <EditText
                    android:id="@+id/a6"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    app:endIconMode="clear_text"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="20sp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/a7"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    app:endIconMode="clear_text"
                    android:layout_marginTop="25dp"
                    android:hint="Total Price">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        app:endIconMode="clear_text"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/a5"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                app:endIconMode="clear_text"
                android:hint="Description"
                app:counterEnabled="true"
                app:counterMaxLength="200"
                app:helperTextEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:endIconMode="clear_text"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="170dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/black"
                    android:text="reset"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:cornerRadius="12sp" />

                <Button
                    android:layout_width="170dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="#ff4500"
                    android:text="add"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:cornerRadius="12sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>