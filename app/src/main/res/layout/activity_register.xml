<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Register">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/logo_register"
                android:layout_width="200dp"
                android:layout_centerHorizontal="true"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/Regiter_text"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/logo_register"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Register Account"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Name_register_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/Regiter_text"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Enter Full Name "
                app:startIconContentDescription="Name Icon"
                app:startIconDrawable="@drawable/name_icon"
                app:startIconTint="#ff8300">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_register_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/Name_register_layout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Enter your Email"
                app:startIconContentDescription="Email icon"
                app:startIconDrawable="@drawable/emailicon"
                app:startIconTint="#ff8300">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/number_register_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/email_register_layout"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Enter your Mobile Number"
                app:startIconContentDescription="mobile number icon"
                app:startIconDrawable="@drawable/number_logo"
                app:startIconTint="#ff8300">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/number_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_register_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/number_register_layout"
                android:layout_marginTop="10dp"
                android:hint="Enter Password"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#ff8300"
                app:startIconContentDescription="Password icon"
                app:startIconDrawable="@drawable/passwordicon"
                app:startIconTint="#ff8300">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/repassword_register_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/password_register_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="Re-Enter assword"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#ff8300"
                app:startIconContentDescription="Password icon"
                app:startIconDrawable="@drawable/passwordicon"
                app:startIconTint="#ff8300">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/repassword_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/business_register_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/repassword_register_layout"
                android:layout_marginTop="10dp"
                android:hint="Enter your Business name"
                app:startIconContentDescription="Business icon"
                app:startIconDrawable="@drawable/businessicon"
                app:startIconTint="#ff8300">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/business_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/Register_submit"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@id/business_register_layout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:backgroundTint="#FF8000"
                android:text="Register"
                android:textSize="20sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/Already_on_stockflux"
                    android:layout_width="305dp"
                    android:layout_below="@id/Register_submit"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:text="Already on StockFlux !"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/login_text"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/Register_submit"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-40dp"
                    android:layout_toEndOf="@id/Already_on_stockflux"
                    android:backgroundTint="#E97451"
                    android:text="@string/to_login"
                    android:textColor="#F44336"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scrollbarSize="8dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>