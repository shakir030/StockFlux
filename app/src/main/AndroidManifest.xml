            android:name=".sales_expense_reports"
            android:exported="false"
            android:label="Sales Expenses View"
            android:parentActivityName=".expense_reports"/>
        <activity
            android:name=".update_purchase_expense"
            android:exported="false"
            android:label="Update Purchase Expenses"
            android:parentActivityName=".purchase_expense_reports"/>
        <activity
            android:name=".purchase_expense_reports"
            android:exported="false"
            android:parentActivityName=".expense_reports"
            android:label="Purchase Expenses View"/>
        <activity
            android:name=".expense_reports"
            android:exported="false"
            android:parentActivityName=".reports"
            android:label="Expenses Reports"/>


        <activity
            android:name=".Navigation_Menu"
            android:exported="false" />


    </application>

</manifest>
